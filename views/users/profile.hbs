{{#extends 'base'}}

{{#block 'content'}}

<div class="form-holder">
  <div class="card mt-5 mb-4" style="max-width: 800px;">
  <div class="row g-0">    
    <div class="col-md-8">
      <div class="card-body">
        <h1 class="detail-title">Hi, {{user.username}}!</h1>
        <h5 class="card-text">User Details</h5>        
        <h5 class="mt-3">Product Information</h5>        
        <p class="card-text"><b>Username:</b> {{user.username}}</p>
        <p class="card-text"><b>Email:</b> {{user.email}}</p>        
      </div>
    </div>
  </div>
  </div>
  <a href="/users/logout" class="btn btn-secondary my-3">Log Out</a>
</div>

{{/block}}

{{/extends}}
