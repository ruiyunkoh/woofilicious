{{#extends 'base'}}

{{#block 'content'}}

<div class="form-holder">
  <div class="card mt-5 mb-4" style="max-width: 800px;">
    <div class="row g-0">    
        <div class="card-body">
          <h1 class="detail-title">Hi, {{user.username}}!</h1>
          <h5 class="detail-title">User Details</h5>                
          <p class="card-text"><b>Username:</b> {{user.username}}</p>
          <p class="card-text"><b>Email:</b> {{user.email}}</p>
          <a href="" class="card-text text-dark">Click to view orders</a>        
        </div>
      </div>
  </div>  
</div>
<div class="redirect-btn">
  <a href="/users/logout" class="btn btn-sm btn-outline-dark my-3">Log Out</a>
</div>

{{/block}}

{{/extends}}
