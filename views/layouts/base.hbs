<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Woofilicious</title>

    <style>
    @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@300;800&family=Roboto+Condensed:wght@700&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Shippori+Antique&display=swap");

      /*General styling*/
      .icons > a{
        color: #212529;
      }
      
      /*Navbar styling */

      #shopLogo > img{
        height: 80px;
        width: 60px;
        margin-left: 20px;
      }
      .nav {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: rgb(169, 230, 230);
      }    
      .nav-link:hover{
        color: rgb(255,255,255)!important;
      }

      /*Home page styling*/

      .banner {
        position: relative;
        text-align: center;
        color: rgb(39, 39, 39);
      }
      .banner>img{
        height: calc(100vh - 80px);
        width: 100%;
      }
      .text {
        position: absolute;
        top: 20%;
        left: 50%;
        transform: translate(-50%, -50%);
      }
      .text>h1{
        font-family: "Roboto Condensed", sans-serif;
      }
      .text>p{
        max-width: 450px;
        font-family: "Montserrat", sans-serif;
      }

      /*Form styling*/

      h1{    
        display: flex;
        justify-content: center;    
        font-family: "Roboto Condensed", sans-serif;
        margin-top: 10px;
      }
      .form-holder{
        display: flex;
        justify-content: center;  
      }
      form {
        max-width: 800px !important;
      }

      /*Products styling*/

      .products-holder{
        display: flex;
        justify-content: center;
      }
      .create-btn{
        display: flex;
        justify-content: center;
      }

    </style>

  </head>

  <body>
    <div class ="container-fluid">
      <nav class="nav sticky-top"> 
        <div id="shopLogo">
            <img alt="" src="https://cdn-icons-png.flaticon.com/512/3248/3248199.png">
          </div>    
          <a class="nav-link active mx-2 text-dark" href="/" >HOME</a>
          <a class="nav-link mx-2 text-dark" href="/products/">PRODUCTS</a>
          <a class="nav-link mx-2 text-dark" href="/contact">CONTACT US</a>
          
      </nav>
    </div>

    <div class="container-fluid">
      {{#if success_messages }}        
            {{#each success_messages}}
                <div class="alert alert-success">
                    {{this}}
                </div>
            {{/each}}        
        {{/if}}

        {{#if error_messages}}
            {{#each error_messages}}
                <div class="alert alert-danger">
                    {{this}}
                </div>
            {{/each}}       

        {{/if}}

      {{#block 'content'}}{{/block}}
    </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
   
  </body>
</html>